@using TruckSaleWebApp.Utils
<div class="navbar navbar-inverse navbar-fixed-top scroll-me" id="menu-section">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
                <img src="~/Content/img/logo/logo.png" class="img-responsive logo" />
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="@Html.IsActive("Home","Index")">
                    @Html.ActionLink("TRANG CHỦ", "Index", "Home")
                </li>
                <li class="dropdown-large @Html.IsActive("Home","Products")">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        SẢN PHẨM
                    </a>
                    <ul class="dropdown-menu dropdown-menu-large row" id="header-product-menu"></ul>
                </li>
                <li class="@Html.IsActive("Home","Pricing")">
                    @Html.ActionLink("BẢNG GIÁ", "Pricing", "Home")
                </li>
                <li class="@Html.IsActive("Home","InstallmentPayment")">@Html.ActionLink("XE TRẢ GÓP", "InstallmentPayment", "Home")</li>
                <li class="@Html.IsActive("Home","Repair")">@Html.ActionLink("SỬA CHỮA", "Repair", "Home")</li>
                <li class="@Html.IsActive("Home","Insurrance")">@Html.ActionLink("BẢO HIỂM" , "Insurrance", "Home")</li>
                <li class="@Html.IsActive("Home","Contact")">@Html.ActionLink("LIÊN HỆ" , "Contact", "Home")</li>
            </ul>
        </div>

    </div>
</div>
<script>
	 var grouptmpstr = "<li class='col-sm-3 img' ><a href='/home/products/{0}'><img class='img-responsive' src='{1}' /><h5 class='mtitle'>{2}</h5></a></li>"
	 var grouptmp = $.validator.format(grouptmpstr);
	 $(function(){
	     $.get('/api/manufacture', function (data) {
			$('#header-product-menu').html("");
			$.each(data.Result, function (key, val) {
				$('#header-product-menu').append(grouptmp(val.Id, val.Img, val.Name));
			});
		});
	 }); 
</script>
